<Window x:Class="mbti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mbti"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
  <Grid>
    <Image Source="images/main.jpg" Stretch="Fill"></Image>
    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0 150 0 0" FontSize="100" FontWeight="Bold" 
               FontFamily="Font/#KOTRA HOPE">심리 테스트</TextBlock>
      
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Background="Ivory" Margin="0 150 0 0" Width="400" Height="50"
             x:Name="btnStart" FontSize="30" FontWeight="Bold"  
              FontFamily="Font/#KOTRA HOPE"
             Click="btnStart_Click">START</Button>
    </StackPanel>
  </Grid>
  </Window>