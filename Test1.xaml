<Window x:Class="mbti.Test1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mbti"
        mc:Ignorable="d"
        Title="Test1" Height="600" Width="800">
  <Grid>
    <Canvas x:Name="field" Background="AliceBlue"></Canvas>
    <StackPanel Margin="0 40 0 480" Background="AliceBlue" Orientation="Vertical"
                HorizontalAlignment="Center">
      <TextBlock x:Name="txtQ" FontSize="45" FontWeight="Black" 
                 FontFamily="Font/#KOTRA HOPE">Q1</TextBlock>
    </StackPanel>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
      <TextBlock x:Name="txtContent" FontSize="45"  Margin=" 0 170 0 500" FontWeight="Bold" 
                  FontFamily="Font/#KOTRA HOPE" ></TextBlock>
    </StackPanel>

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
      <Button Background="Ivory" x:Name="btn1" Margin="0 320 0 500" FontSize="30" 
              FontFamily="Font/#KOTRA HOPE" 
              Height="50" Width="300" Click="btn1_Click">YES</Button>
    </StackPanel>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
      <Button Background="Ivory" x:Name="btn2" Margin="0 380 0 500" FontSize="30" 
              FontFamily="Font/#KOTRA HOPE" 
              Height="50" Width="300" Click="btn2_Click">NO</Button>
    </StackPanel>
  </Grid>
</Window>

